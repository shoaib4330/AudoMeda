<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <view
        android:id="@+id/owned_verticalSlider"
        class="com.emo.lkplayer.outerlayer.customviews.VerticalSliderWrapped$VerticalSlider"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:minWidth="@dimen/custom_verticalSlider_minWidth">
    </view>

    <TextView
        android:id="@+id/tv_owned_verticalSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Sample Text"
        android:textAppearance="?android:textAppearanceMedium" />
</LinearLayout>
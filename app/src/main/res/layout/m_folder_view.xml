<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:background="@drawable/list_item_background_selector"
    android:padding="20dp"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/imgView_FolderImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="@dimen/basic_textview_padding"
        android:scaleType="center"
        app:srcCompat="@drawable/folder_default_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/basic_inbetween_components_margin"
        android:padding="@dimen/basic_textview_padding">

        <TextView
            android:id="@+id/tv_FolderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/basic_textview_vertical_margin"
            android:lines="1"
            android:text="Folder Name"
            android:textAppearance="@style/ListTextAppearnceMedium" />

        <TextView
            android:id="@+id/tv_FolderPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/basic_textview_vertical_margin"
            android:lines="2"
            android:text="/0/path"
            android:textAppearance="@style/ListTextAppearnceSmall" />

        <TextView
            android:id="@+id/tv_NumSongsInFolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/basic_textview_vertical_margin"
            android:text="4 songs"
            android:textAppearance="@style/ListTextAppearnceSmall" />

    </LinearLayout>

</LinearLayout>
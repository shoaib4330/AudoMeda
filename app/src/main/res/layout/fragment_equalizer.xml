<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_ui.view.fragments.NavEqualizerFragment">

    <LinearLayout
        android:id="@+id/slider_preAmp_container"
        android:layout_width="102dp"
        android:layout_height="match_parent"
        android:background="#000"
        android:padding="2dp">
        <com.emo.emomediaplayerpro.view_ui.customviews.VerticalSliderWrapped
            android:id="@+id/slider_preAmp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="@dimen/customSlider_allSidedPadding"
            android:layout_alignParentLeft="true"
            android:background="?android:windowBackground"/>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/eqfrag_hsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/slider_preAmp_container"
        android:layout_toRightOf="@+id/slider_preAmp_container"
        android:scrollbars="horizontal"
        android:scrollbarSize="5dp"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.emo.emomediaplayerpro.view_ui.customviews.VerticalSliderWrapped
                android:id="@+id/slider_eq1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="@dimen/customSlider_allSidedPadding"
                android:visibility="gone"/>

            <com.emo.emomediaplayerpro.view_ui.customviews.VerticalSliderWrapped
                android:id="@+id/slider_eq2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="@dimen/customSlider_allSidedPadding"
                android:visibility="gone"/>

            <com.emo.emomediaplayerpro.view_ui.customviews.VerticalSliderWrapped
                android:id="@+id/slider_eq3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="@dimen/customSlider_allSidedPadding"
                android:visibility="gone"/>

            <com.emo.emomediaplayerpro.view_ui.customviews.VerticalSliderWrapped
                android:id="@+id/slider_eq4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="@dimen/customSlider_allSidedPadding"
                android:visibility="gone"/>

            <com.emo.emomediaplayerpro.view_ui.customviews.VerticalSliderWrapped
                android:id="@+id/slider_eq5"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="@dimen/customSlider_allSidedPadding"
                android:visibility="gone"/>

            <com.emo.emomediaplayerpro.view_ui.customviews.VerticalSliderWrapped
                android:id="@+id/slider_eq6"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="@dimen/customSlider_allSidedPadding"
                android:visibility="gone"/>

            <com.emo.emomediaplayerpro.view_ui.customviews.VerticalSliderWrapped
                android:id="@+id/slider_eq7"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="@dimen/customSlider_allSidedPadding"
                android:visibility="gone"/>

            <com.emo.emomediaplayerpro.view_ui.customviews.VerticalSliderWrapped
                android:id="@+id/slider_eq8"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="@dimen/customSlider_allSidedPadding"
                android:visibility="gone"/>

            <com.emo.emomediaplayerpro.view_ui.customviews.VerticalSliderWrapped
                android:id="@+id/slider_eq9"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="@dimen/customSlider_allSidedPadding"
                android:visibility="gone"/>

            <com.emo.emomediaplayerpro.view_ui.customviews.VerticalSliderWrapped
                android:id="@+id/slider_eq10"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="@dimen/customSlider_allSidedPadding"
                android:visibility="gone"/>
        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>

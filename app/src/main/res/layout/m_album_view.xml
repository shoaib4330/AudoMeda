<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/basic_allSides_padding"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_albumImage"
            android:layout_width="@dimen/basic_albumview_imageview_size"
            android:layout_height="@dimen/basic_albumview_imageview_size"
            app:srcCompat="@drawable/album_default_ico"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_albumTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_albumImage"
            android:gravity="center_horizontal"
            android:lines="1"
            android:text="My Album"
            android:textAppearance="@style/ListTextAppearnceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_albumArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_albumTitle"
            android:gravity="center_horizontal"
            android:lines="1"
            android:text="A Singer"
            android:textAppearance="@style/ListTextAppearnceSmall" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
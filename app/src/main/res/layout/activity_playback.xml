<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.emo.lkplayer.view.PlaybackActivity">

    <com.emo.lkplayer.customviews.AudoMedaController
        android:id="@+id/mediaConroller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></com.emo.lkplayer.customviews.AudoMedaController>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_AlbumArtSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mediaConroller"
        android:background="#ccc"></android.support.v4.view.ViewPager>

</RelativeLayout>